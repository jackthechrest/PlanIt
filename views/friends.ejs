<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/css/style.css" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= user.username %>'s Friends | PlanIt </title>
</head>
<body>
    <div class="navbar">
        <a href="/logo" class="logo"><img src="/imgs/logo.png" alt="PlanIt Logo"></a>
        <% if (hasUnread) { %>
          <a href="/messages" class="menu-inbox"><img src="/imgs/inbox_notification_icon.png" alt="Inbox (Notifications)"></a>
        <% } else { %>
          <a href="/messages" class="menu-inbox"><img src="/imgs/inbox_icon.png" alt="Inbox (No Notifications)"></a>
        <% } %>
        <a href="/search" class="menu-search"><img src="/imgs/search_icon.png" alt="Search"></a>
        <a href="/calendar" class="menu-calendar"><img src="/imgs/calendar_icon.png" alt="Calendar"></a>
    </div>

    <h1 id="navbarEnd"></h1>

    <div class="follow-content">
    <h1><%= user.username %>'s Friends:</h1>
        <% if (friends.length === 0) { %>
            <h2>No Friends</h2>
        <% } else { %>
            <ul>
                <% for (const friend of friends) { %>
                <li>
                    <div class="grid-container">
                        <div class="profile-background <%=friend.pictureOptions[0]%>">
                        <div class="profile-head <%=friend.pictureOptions[1]%>"></div>
                        <div class="profile-body <%=friend.pictureOptions[2]%>"></div>
                        </div>
                        <div>
                        <p><a href="/users/<%= friend.userId %>"><%=friend.displayName%> <span class="username">@<%= friend.username %></span></a></p>
                        </div>
                        <div>
                        <button class="btn-small" id="red"><a href = '/api/unfriend/<%=friend.userId %>'>Unfriend</a></button>
                        </div>
                    </div>
                </li>
                <% } %>
            </ul>
        <% } %>  
</div>     
</body>
</html>