<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/css/style.css" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Report Log | PlanIt </title>
</head>
<body>
    <div class="navbar">
        <a href="/logo" class="logo"><img src="/imgs/logo.png" alt="PlanIt Logo"></a>
        <a href="/messages" class="menu"><img src="/imgs/inbox_icon.png" alt="Inbox (No Notifications)"></a>
        <a href="/search" class="menu"><img src="/imgs/search_icon.png" alt="Search"></a>
        <a href="/calendar" class="menu"><img src="/imgs/calendar_icon.png" alt="Calendar"></a>
      </div>

    <h1 id = "navbarEnd">INBOX MENU</h1>
    <ul>
        <li>
            <p>- <a href="/messages">Messages</a></p>
        </li>
        <li>
            <p>- <a href="/notifications">Other Notifications</a></p>
        </li>
        <% if (user.isAdmin) { %>
            <li>
                <p>- <a href="/reports">Reports</a></p>
            </li>
        <% } %>
    </ul>
    
    <h1>Report Log:</h1>

    <% if (pendingReports.length === 0) { %>
        <p>No Reports</p>
    <% } else { %>
    <ul>
        <% for (const report of pendingReports) { %>
            <% if (report.offendingContentId.charAt(0) === "P") {  %>
                <li>
                    <p>[<%=report.dateString%>]  <a href="<%=report.link%>">Reported Profile</a></p>
                </li>
            <% } else if (report.offendingContentId.charAt(0) === "E") { %>
                <li>
                    <p>[<%=report.dateString%>]  <a href="<%=report.link%>">Reported Event</a></p>
                </li>
            <% } else if (report.offendingContentId.charAt(0) === "W") { %>
                <li>
                    <p>[<%=report.dateString%>]  <a href="<%=report.link%>">Reported Wall Post</a></p>
                </li>
            <% } else if (report.offendingContentId.charAt(0) === "C") { %>
                <li>
                    <p>[<%=report.dateString%>]  <a href="<%=report.link%>">Reported Comment</a></p>
                </li>
            <% } %>
        <% } %>
    </ul>
    <% } %>
</body>
</html>